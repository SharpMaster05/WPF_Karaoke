<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MenuBorder" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Width" Value="50"/>
    </Style>

    <Style x:Key="TextBoxBackground" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style x:Key="Section" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource MenuBackground}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="20"/>
    </Style>
    
</ResourceDictionary>